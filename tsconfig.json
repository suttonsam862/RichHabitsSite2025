{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve"
  },
  "include": ["shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "client", "**/*.test.ts"]
}
